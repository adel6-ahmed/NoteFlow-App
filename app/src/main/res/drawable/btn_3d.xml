<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- حالة الزر عند الضغط -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#0054A6"
                android:endColor="#003D79" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#002952" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <!-- الحالة العادية -->
    <item>
        <layer-list>
            <!-- الظل -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#003D79" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!-- الطبقة الأمامية -->
            <item android:top="4dp" android:left="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#0078D7"
                        android:endColor="#00A4EF" />
                    <corners android:radius="12dp" />
                    <stroke android:width="2dp" android:color="#0054A6" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
